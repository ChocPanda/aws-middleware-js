{
  "name": "faas-middleware-js",
  "version": "0.0.1",
  "description": "An opinionated Middleware and lifecycle framework for build FaaS Lambdas",
  "main": "src/index.js",
  "author": "ChocPanda",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rollup",
    "test": "yarn run test:unit",
    "test:unit": "nyc ava",
    "test:cov": "nyc report",
    "test:report": "yarn run test:unit --tap | tap-junit --output ./reports/ava --name test-results.xml",
    "lint": "yarn lint:test",
    "lint:test": "xo --cwd=./src",
    "lint:fix": "yarn lint:test --fix",
    "lint:report": "yarn run lint:test --reporter junit > ./reports/xo/test-results.xml"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "ninos": "^2.0.2",
    "nyc": "^14.0.0",
    "prettier": "^1.17.0",
    "tap-junit": "^3.1.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "prettier": "true",
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "no-use-before-define": "error"
    }
  }
}
