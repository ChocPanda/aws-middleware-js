{
  "name": "aws-middleware-js",
  "version": "0.0.1",
  "description": "An opinionated Middleware and lifecycle framework for build AWS Lambdas",
  "main": "src/index.js",
  "author": "ChocPanda",
  "repository": "github:ChocPanda/aws-middleware-js",
  "bugs": "https://github.com/ChocPanda/aws-middleware-js/issues",
  "keywords": [
    "aws",
    "lambda",
    "middleware",
    "faas"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "commit": "git-cz",
    "build": "rollup -c",
    "test": "nyc ava",
    "test:unit": "nyc ava",
    "test:cov": "nyc report",
    "test:report": "nyc ava --tap | tap-junit --output ./reports/ava --name test-results.xml",
    "lint": "xo",
    "lint:test": "xo",
    "lint:fix": "xo --fix",
    "lint:report": "xo --reporter junit > ./reports/xo/test-results.xml",
    "release": "semantic-release",
    "docs-toc": "node ./scripts/update-toc.js"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "markdown-toc": "^1.2.0",
    "ninos": "^2.0.2",
    "nyc": "^14.0.0",
    "path": "^0.12.7",
    "rollup": "^1.10.1",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-generate-package-json": "^3.1.2",
    "rollup-plugin-license": "^0.8.1",
    "rollup-plugin-node-resolve": "^4.2.3",
    "semantic-release": "^15.13.3",
    "shelljs": "^0.8.3",
    "shx": "^0.3.2",
    "tap-junit": "^3.1.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "prettier": "true"
  },
  "dependencies": {
    "http-errors": "^1.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
